{
  "name": "patchfox",
  "version": "4.0.0",
  "description": "A client for Secure Scuttlebutt as a WebExtension",
  "main": "src/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "watch-parcel": "parcel watch index.html --out-dir debug --no-hmr",
    "watch-firefox": "web-ext run --source-dir ./debug/ --firefox=firefox-devedition --browser-console",
    "watch-static": "watch \"npm run copy-files\" ./static",
    "copy-files": "copyfiles -a -u 1 \"./static/**/*\" ./debug",
    "build": "parcel build index.html",
    "dev": "concurrently --kill-others \"npm:watch-*\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/soapdog/patchfox.git"
  },
  "keywords": [
    "ssb",
    "dex",
    "p2p",
    "firefox",
    "dapps",
    "Web Extension"
  ],
  "author": "Andre Alves Garzia <andre@andregarzia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soapdog/patchfox/issues"
  },
  "browserslist": [
    "Firefox ESR"
  ],
  "homepage": "https://github.com/soapdog/patchfox#readme",
  "dependencies": {
    "@babel/runtime-corejs2": "^7.0.0",
    "app-shell": "^0.1.0",
    "highlight.js": "^9.12.0",
    "install": "^0.12.2",
    "mithril": "^2.0.0-rc.1",
    "npm": "^6.4.1",
    "pull-stream": "^3.6.8",
    "ssb-avatar": "^0.2.0",
    "ssb-client": "^4.5.7",
    "ssb-config": "^2.2.0",
    "ssb-keys": "^7.0.14",
    "ssb-markdown": "^4.0.0",
    "ssb-ref": "^2.11.1",
    "ssb-web-resolver": "^1.1.2",
    "stream-to-pull-stream": "^1.7.2",
    "timeago.js": "^4.0.0-beta.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "parcel-bundler": "^1.11.0",
    "sass": "^1.14.1",
    "watch": "^1.0.2",
    "web-ext": "^2.9.3"
  }
}
